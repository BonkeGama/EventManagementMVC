@model IEnumerable<OlwandleHotel.Models.Driver>

@{
    Layout = "~/Views/Shared/newlwayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>

<body>
    <p>
        @Html.ActionLink("Go back", "Index", "Home")
    </p>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Driver_IDNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Driver_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Driver_Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Driver_CellNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Driver_Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Driver_Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Driver_IDNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Driver_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Driver_Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Driver_CellNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Driver_Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Driver_Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VehicleName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Driver_ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Driver_ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Driver_ID })
                </td>
            </tr>
        }

    </table>
</body>
</html>
